<resources>
    <style name="Sapphire" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/backgroundBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/backgroundBackground</item>
        <item name="android:navigationBarColor">@color/backgroundBackground</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Sapphire.Launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/backgroundMain</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">@color/backgroundMain</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>