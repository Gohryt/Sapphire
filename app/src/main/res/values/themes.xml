<resources>
    <style name="Sapphire" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/backgroundBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/backgroundBackground</item>
        <item name="android:navigationBarColor">@color/backgroundBackground</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Sapphire.Launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/backgroundMainNight</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">@color/backgroundMainNight</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Sapphire.LogoName">
        <item name="android:textColor">@color/itemColorMain</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textFontWeight">900</item>
    </style>
</resources>